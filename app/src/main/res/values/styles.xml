<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="DialogStyle" parent="android:Theme.Dialog">
                  <item name="android:windowFrame">@null</item>
                  <item name="android:windowNoTitle">true</item>
                  <item name="android:windowBackground">@android:color/transparent</item>
                  <item name="android:windowIsFloating">true</item>
                  <item name="android:windowContentOverlay">@null</item>
                  <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogStyle_No_Frame" parent="android:Theme.Dialog">
                  <item name="android:windowFrame">@null</item>
                  <item name="android:windowNoTitle">true</item>
                  <item name="android:windowBackground">@android:color/transparent</item>
                  <item name="android:windowIsFloating">true</item>
                  <item name="android:windowContentOverlay">@null</item>
                  <item name="android:backgroundDimEnabled">false</item>
              </style>


    <style name="window_anim_style">
        <item name="android:windowExitAnimation" >@anim/bottom_out</item>
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
    </style>
    
    <style name="Dividing_Line">
        <item name="android:background">@color/md_grey_200</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>
</resources>
